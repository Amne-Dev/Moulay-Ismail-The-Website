# Server Configuration
PORT=3000
NODE_ENV=development

# Admin Credentials
ADMIN_USER=admin
# Generate a hash using: bcrypt.hash('your-password', 10)
# For development, leaving empty will use default password 'admin123'
ADMIN_PASS_HASH=

# JWT Secret (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# MongoDB Connection (optional - will use in-memory storage if not provided)
MONGODB_URI=

# Example for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/myismail-web?retryWrites=true&w=majority

# Example for local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/myismail-web